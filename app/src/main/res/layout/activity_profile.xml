                android:id="@+id/delete_profile"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="#7A9CDED1"
                android:fontFamily="sans-serif-black"
                android:text="@string/delete_profile_profile"
                android:textColor="#5C5A5A" />

            <Button
                android:id="@+id/edit_profile"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/delete_profile"
                android:layout_toRightOf="@id/delete_profile"
                android:background="#7A9CDED1"
                android:fontFamily="sans-serif-black"
                android:text="@string/edit_profile_profile"
                android:textColor="#5C5A5A" />
        </RelativeLayout>

