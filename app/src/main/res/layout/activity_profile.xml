    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="40dp">

        <Button
            android:id="@+id/delete_profile"
            android:layout_width="134dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/style_button"
            android:fontFamily="sans-serif-black"
            android:text="@string/delete_profile_profile"
            android:textColor="#5C5A5A"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.981"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.263" />

        <Button
            android:id="@+id/edit_profile"
            android:layout_width="134dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="227dp"
            android:layout_marginRight="227dp"
            android:layout_toEndOf="@id/delete_profile"
            android:layout_toRightOf="@id/delete_profile"
            android:background="@drawable/style_button"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/edittt_profile"
            android:textColor="#5C5A5A"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.263" />
