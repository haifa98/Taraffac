<!-- the information part in the middle with the two button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/namee_profile"
            app:hintTextColor="#595656"
            app:boxStrokeColor="#959090"
            app:boxStrokeWidth="1dp"
            app:boxBackgroundColor="#00000000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_person_outline_24"
                android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                android:drawablePadding="10dp"
                android:enabled="false"
                android:textColor="#595656"

                android:text="@string/your_name_profille" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/profille_email"
            app:boxStrokeColor="#595656"
            app:boxStrokeWidth="2dp"
            app:boxBackgroundColor="#00000000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_outline_email_24"
                android:drawableLeft="@drawable/ic_outline_email_24"
                android:drawablePadding="10dp"
                android:enabled="false"
                android:textColor="#595656"
                android:text="@string/your_email_profilee" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adding_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/adding_type_profile"
            app:boxStrokeColor="#595656"
            app:boxStrokeWidth="2dp"
            android:paddingBottom="10dp"
            app:boxBackgroundColor="#00000000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_check_circle_outline_24"
                android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
                android:drawablePadding="10dp"
                android:enabled="false"
                android:textColor="#595656"
                android:text="@string/adding_type_in_profile"/>
